{
    "extends": ["airbnb", "plugin:prettier/recommended"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 2,
        "comma-dangle": ["error", "only-multiline"],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "react/jsx-filename-extension": "off",
        "max-len": ["error", { "code": 80 }],
        "operator-linebreak": "off",
        "indent": ["error", 4],
        "prettier/prettier": "error"
    }
}
